<h1 class="text-center my-4">New Review</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for [@restaurant, @review], html: { class: "bg-light p-4 rounded shadow-sm" } do |f| %>

        <div class="mb-3">
          <%= f.input :content, label: "Review Content", input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.number_field :rating, label: "Rating (0-5)", as: :number, input_html: { min: 0, max: 5, class: "form-control" } %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Submit Review", class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
