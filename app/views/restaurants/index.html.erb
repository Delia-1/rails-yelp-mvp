<h1 class="bg-dark-subtle text-center py-3">All Our Restaurants</h1>

<div class="container mt-4">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant)%></h5>
            <p class="card-text">
              <strong>Address:</strong> <%= restaurant.address %><br>
              <strong>Phone:</strong> <%= restaurant.phone_number %><br>
              <strong>Category:</strong> <%= restaurant.category.capitalize %>
              </p>
          </div>
        </div>
      </div>
    <% end %>
   <div class="div"><%= link_to "new restaurant" , new_restaurant_path(@restaurant)%></div>
  </div>
</div>
