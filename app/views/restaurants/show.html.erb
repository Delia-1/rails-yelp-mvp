<h1 class="bg-dark-subtle text-center py-3"><%= @restaurant.name %> infos</h1>
<div class="div"><%= link_to "All restaurants", restaurants_path(@restaurant)%></div>
 <div class="container mt-4">
  <div class="row"><div class=" mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= @restaurant.name %></h5>
            <p class="card-text">
              <strong>Address:</strong> <%= @restaurant.address %><br>
              <strong>Phone:</strong> <%= @restaurant.phone_number %><br>
              <strong>Category:</strong> <%= @restaurant.category.capitalize %>
            </p>
            <p><strong>Reviews</strong></p>
               <ul class="list-group">
                 <% @restaurant.reviews.each do |review| %>
                   <li class="list-group-item"><%= review.content %></li>
                 <% end %>
                   <%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
               </ul>
               <br>
          </div>
        </div>
      </div>
  </div>
 </div>
